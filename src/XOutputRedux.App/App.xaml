<Application x:Class="XOutputRedux.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XOutputRedux.App">
    <Application.Resources>
        <!-- Synthwave gradient for branding -->
        <LinearGradientBrush x:Key="SynthwaveRetroBrush" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF5722FF" Offset="0.0"/>
            <GradientStop Color="#FFFF00D4" Offset="0.6"/>
            <GradientStop Color="#FFFF9100" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Dark mode ToolTip style -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Application.Resources>
</Application>
