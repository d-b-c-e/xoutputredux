<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.17763.0</TargetFramework>
    <AssemblyName>XOutputRenew</AssemblyName>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>XOutputRenew.App</RootNamespace>
    <StartupObject>XOutputRenew.App.Program</StartupObject>
    <ApplicationIcon>app.ico</ApplicationIcon>

    <!-- Versioning -->
    <Version>0.7.0-alpha</Version>
    <AssemblyVersion>0.7.0.0</AssemblyVersion>
    <FileVersion>0.7.0.0</FileVersion>
    <InformationalVersion>0.7.0-alpha</InformationalVersion>

    <!-- Assembly Info -->
    <Product>XOutputRenew</Product>
    <Company>XOutputRenew</Company>
    <Copyright>Copyright (c) 2026</Copyright>
    <Description>Xbox controller emulator - maps multiple input devices to a virtual Xbox 360 controller</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    <PackageReference Include="Microsoft.Toolkit.Uwp.Notifications" Version="7.1.3" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="console-controller.png" />
    <Resource Include="app.ico" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\XOutputRenew.Core\XOutputRenew.Core.csproj" />
    <ProjectReference Include="..\XOutputRenew.Input\XOutputRenew.Input.csproj" />
    <ProjectReference Include="..\XOutputRenew.Emulation\XOutputRenew.Emulation.csproj" />
    <ProjectReference Include="..\XOutputRenew.HidHide\XOutputRenew.HidHide.csproj" />
  </ItemGroup>

</Project>
