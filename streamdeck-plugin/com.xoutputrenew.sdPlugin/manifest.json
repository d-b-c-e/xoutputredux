{
  "Name": "XOutputRenew",
  "Version": "1.0.0",
  "Author": "XOutputRenew",
  "Description": "Control XOutputRenew Xbox controller emulator profiles from your Stream Deck",
  "Category": "XOutputRenew",
  "CategoryIcon": "imgs/category-icon",
  "Icon": "imgs/plugin-icon",
  "URL": "https://github.com/d-b-c-e/xoutputrenew",
  "SDKVersion": 2,
  "Software": {
    "MinimumVersion": "6.9"
  },
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "enabled"
  },
  "Actions": [
    {
      "Name": "Start Profile",
      "UUID": "com.xoutputrenew.start-profile",
      "Icon": "imgs/action-start",
      "Tooltip": "Start an XOutputRenew profile",
      "States": [
        {
          "Image": "imgs/action-start",
          "TitleAlignment": "bottom"
        }
      ],
      "PropertyInspectorPath": "ui/profile-picker.html"
    },
    {
      "Name": "Stop Profile",
      "UUID": "com.xoutputrenew.stop-profile",
      "Icon": "imgs/action-stop",
      "Tooltip": "Stop the running XOutputRenew profile",
      "States": [
        {
          "Image": "imgs/action-stop",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Toggle Profile",
      "UUID": "com.xoutputrenew.toggle-profile",
      "Icon": "imgs/action-toggle-off",
      "Tooltip": "Toggle an XOutputRenew profile on/off",
      "States": [
        {
          "Image": "imgs/action-toggle-off",
          "TitleAlignment": "bottom",
          "Name": "Off"
        },
        {
          "Image": "imgs/action-toggle-on",
          "TitleAlignment": "bottom",
          "Name": "On"
        }
      ],
      "PropertyInspectorPath": "ui/profile-picker.html"
    },
    {
      "Name": "Start Monitoring",
      "UUID": "com.xoutputrenew.start-monitoring",
      "Icon": "imgs/action-monitor-start",
      "Tooltip": "Start game monitoring (auto-switch profiles)",
      "States": [
        {
          "Image": "imgs/action-monitor-start",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Stop Monitoring",
      "UUID": "com.xoutputrenew.stop-monitoring",
      "Icon": "imgs/action-monitor-stop",
      "Tooltip": "Stop game monitoring",
      "States": [
        {
          "Image": "imgs/action-monitor-stop",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Toggle Monitoring",
      "UUID": "com.xoutputrenew.toggle-monitoring",
      "Icon": "imgs/action-monitor-off",
      "Tooltip": "Toggle game monitoring on/off",
      "States": [
        {
          "Image": "imgs/action-monitor-off",
          "TitleAlignment": "bottom",
          "Name": "Off"
        },
        {
          "Image": "imgs/action-monitor-on",
          "TitleAlignment": "bottom",
          "Name": "On"
        }
      ]
    },
    {
      "Name": "Launch App",
      "UUID": "com.xoutputrenew.launch-app",
      "Icon": "imgs/action-launch",
      "Tooltip": "Launch the XOutputRenew application",
      "States": [
        {
          "Image": "imgs/action-launch",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Profile Dial",
      "UUID": "com.xoutputrenew.profile-dial",
      "Icon": "imgs/action-dial",
      "Tooltip": "Browse profiles with dial, press to toggle",
      "Controllers": ["Encoder"],
      "Encoder": {
        "layout": "$B1",
        "TriggerDescription": {
          "Rotate": "Browse profiles",
          "Push": "Toggle selected profile",
          "Touch": "Show profile name"
        }
      },
      "States": [
        {
          "Image": "imgs/action-dial",
          "TitleAlignment": "middle"
        }
      ]
    }
  ]
}
